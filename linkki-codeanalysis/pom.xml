<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.linkki</groupId>
    <artifactId>linkki-codeanalysis</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>linkki Code Analysis Configurations</name>
    <description>A data binding framework for web based user interfaces with Vaadin.</description>
    <url>https://github.com/linkki-framework/linkki-core</url>
    <licenses>
      <license>
        <name>The Apache License, Version 2.0</name>
        <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      </license>
    </licenses>
    <developers>
      <developer>
        <name>Faktor Zehn</name>
        <email>info@faktorzehn.de</email>
        <organization>Faktor Zehn AG</organization>
        <organizationUrl>https://www.faktorzehn.de</organizationUrl>
      </developer>
    </developers>

    <properties>
        <git.user>${user.name}</git.user>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <showWarnings>true</showWarnings>
                    <showDeprecation>true</showDeprecation>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <scm>
        <connection>scm:git:https://github.com/linkki-framework/linkki-core.git</connection>
        <developerConnection>scm:git:ssh://${git.user}@projekte.faktorzehn.de/projekte/linkki.git</developerConnection>
        <url>https://github.com/linkki-framework/linkki-core/tree/master</url>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>releases</id>
            <name>Commons Public Releases</name>
            <url>https://nexus.faktorzehn.de/content/repositories/commons-public/</url>
        </repository>
        <snapshotRepository>
            <id>snapshots</id>
            <name>Commons Public Snapshots</name>
            <url>https://nexus.faktorzehn.de/content/repositories/commons-public-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>

    <profiles>
	<profile>
            <id>MavenCentralRelease</id>
            <distributionManagement>
                <snapshotRepository>
  		    <id>ossrh</id>
  		    <url>https://oss.sonatype.org/content/repositories/snapshots</url>
                </snapshotRepository>
                <repository>
  		    <id>ossrh</id>
  		    <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
  	        </repository>
            </distributionManagement>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
