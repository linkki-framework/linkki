            "extension": "revapi.filter",
            "configuration": {
                "elements": {
                    "exclude": [
                        ".* com\\.vaadin\\.flow\\..*"
                    ]
                }
            }
        },
        {
            "extension": "revapi.differences",
            "configuration": {
                "ignore": true,
                "differences": [
                    {
